<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Gestión de Rúbricas - Universidad</title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="./img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <%- include("../inc/menuTeacher.ejs") %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <%- include('../inc/headerTeacher.ejs') %>

        <!-- Dashboard View -->
        <div class="view active" id="dashboard">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon primary">
                        <i class="fas fa-table"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value"><%= totalRubricas || 0 %></div>
                        <div class="stat-label">Rúbricas Activas</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon success">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value"><%= totalEvaluaciones || 0 %></div>
                        <div class="stat-label">Evaluaciones Completadas</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon warning">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value"><%= totalEstudiantes || 0 %></div>
                        <div class="stat-label">Estudiantes</div>
                    </div>
                </div>
            </div>

            <div class="content-grid">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Rúbricas Recientes</h2>
                        <a class="btn-text" href="/teacher/rubricas">Ver todas</a>
                    </div>
                    <div class="card-content">
                        <% if (rubricasRecientes && rubricasRecientes.length > 0) { %>
                            <% rubricasRecientes.forEach(function(rubrica) { %>
                                <div class="rubrica-item">
                                    <div class="rubrica-icon">
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                    <div class="rubrica-info">
                                        <div class="rubrica-name"><%= rubrica.nombre_rubrica %></div>
                                        <div class="rubrica-meta">
                                            <% if (rubrica.fecha_evaluacion) { %>
                                                Evaluación: <%= rubrica.fecha_evaluacion %>
                                            <% } else { %>
                                                Sin fecha de evaluación
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="rubrica-actions">
                                        <a class="btn-icon" title="Ver" href="/teacher/rubricas?rubrica=<%= rubrica.id %>">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="empty-state">Todavía no has creado rúbricas.</p>
                        <% } %>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Actividad Reciente</h2>
                    </div>
                    <div class="card-content">
                        <% if (actividadReciente && actividadReciente.length > 0) { %>
                            <% actividadReciente.forEach(function(item) { %>
                                <div class="activity-item">
                                    <div class="activity-icon success">
                                        <i class="fas fa-check"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-text">
                                            Evaluación completada para
                                            <strong><%= item.estudiante_nombre %> <%= item.estudiante_apellido %></strong>
                                        </div>
                                        <div class="activity-time">
                                            <i class="fas fa-calendar-alt"></i>
                                            <%= item.fecha_formateada %> · <%= item.nombre_rubrica %> - <%= item.materia_nombre %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="activity-item">
                                <div class="activity-icon warning">
                                    <i class="fas fa-user-clock"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-text">Aún no has evaluado estudiantes.</div>
                                    <div class="activity-time">Las últimas 4 evaluaciones aparecerán aquí.</div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="./js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>

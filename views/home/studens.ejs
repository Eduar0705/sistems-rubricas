                                <button class="btn-icon" onclick="verEvaluacion(3)" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn-icon" onclick="descargarEvaluacion(3)" title="Descargar">
                                    <i class="fas fa-download"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="table-cell-content">
                                    <i class="fas fa-microscope"></i>
                                    <span>Trabajo de Investigación</span>
                                </div>
                            </td>
                            <td>Metodología</td>
                            <td>-</td>

                    <p class="rubrica-materia">Literatura Contemporánea</p>
                    <div class="rubrica-meta">
                        <span><i class="fas fa-list"></i> 4 Criterios</span>
                        <span><i class="fas fa-percentage"></i> 25% del curso</span>
                    </div>
                    <button class="btn-primary" onclick="verRubrica(2)">
                        <i class="fas fa-eye"></i> Ver Detalles
                    </button>
                </div>

                <div class="rubrica-card" data-materia="marketing">
                    <div class="rubrica-header">
                        <div class="rubrica-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <span class="rubrica-badge active">Activa</span>
                    </div>
                    <h3>Campaña Digital</h3>
                    <p class="rubrica-materia">Marketing Digital</p>
                    <div class="rubrica-meta">
                        <span><i class="fas fa-list"></i> 6 Criterios</span>
                        <span><i class="fas fa-percentage"></i> 35% del curso</span>
                    </div>
                    <button class="btn-primary" onclick="verRubrica(3)">
                        <i class="fas fa-eye"></i> Ver Detalles
                    </button>
                </div>

                <div class="rubrica-card" data-materia="metodologia">
                    <div class="rubrica-header">
                        <div class="rubrica-icon">
                            <i class="fas fa-microscope"></i>
                        </div>
                        <span class="rubrica-badge pending">Próxima</span>
                    </div>
                    <h3>Trabajo de Investigación</h3>
                    <p class="rubrica-materia">Metodología de la Investigación</p>
                    <div class="rubrica-meta">
                        <span><i class="fas fa-list"></i> 7 Criterios</span>
                        <span><i class="fas fa-percentage"></i> 40% del curso</span>
                    </div>
                    <button class="btn-primary" onclick="verRubrica(4)">
                        <i class="fas fa-eye"></i> Ver Detalles
                    </button>
                </div>
            </div>
        </section>


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'Rubricas' %>
    </title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="./img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    <%- include("../inc/menu.ejs") %>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <%- include('../inc/headerAdmin.ejs') %>

                <!-- Dashboard View -->
                <div class="view active" id="dashboard">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon primary">
                                <i class="fas fa-table"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">
                                    <%= totalRubricas %>
                                </div>
                                <div class="stat-label">Rúbricas Activas</div>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon warning">
                                <i class="fas fa-hourglass-half"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">
                                    <%= totalEvaluacionesPendientes %>
                                </div>
                                <div class="stat-label">Evaluaciones Pendientes</div>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon success">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">
                                    <%= totalProfesores %>
                                </div>
                                <div class="stat-label">Docentes</div>
                            </div>
                        </div>
                    </div>

                    <div class="content-grid">
                        <div class="card">
                            <div class="card-header">
                                <h2 class="card-title">Rúbricas Recientes</h2>
                                <a href="/admin/rubricas" class="btn-text">Ver todas</a>
                            </div>
                            <div class="card-content">
                                <% if (rubricasRecientes && rubricasRecientes.length> 0) { %>
                                    <% rubricasRecientes.forEach(function(rubrica) { %>
                                        <div class="rubrica-item">
                                            <div class="rubrica-icon">
                                                <i class="fas fa-file-alt"></i>
                                            </div>
                                            <div class="rubrica-info">
                                                <div class="rubrica-name">
                                                    <%= rubrica.nombre %>
                                                </div>
                                                <% if (rubrica.materia) { %>
                                                    <div class="rubrica-subject">
                                                        <%= rubrica.materia %>
                                                    </div>
                                                    <% } %>
                                                        <div class="rubrica-meta">Actualizada <%=
                                                                rubrica.tiempo_transcurrido %>
                                                        </div>
                                            </div>
                                            <div class="rubrica-actions">
                                                <a href="/admin/rubricas" class="btn-icon" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn-icon" title="Ver"
                                                    onclick="verRubrica('<%= rubrica.id %>')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <% }); %>
                                            <% } else { %>
                                                <div class="rubrica-item">
                                                    <div class="rubrica-icon">
                                                        <i class="fas fa-file-alt"></i>
                                                    </div>
                                                    <div class="rubrica-info">
                                                        <div class="rubrica-name">No hay rúbricas recientes</div>
                                                        <div class="rubrica-meta">Crea tu primera rúbrica</div>
                                                    </div>
                                                </div>
                                                <% } %>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h2 class="card-title">Actividad Reciente</h2>
                            </div>
                            <div class="card-content">
                                <% if (actividadReciente && actividadReciente.length> 0) { %>
                                    <% actividadReciente.forEach(function(actividad) { %>
                                        <div class="activity-item">
                                            <div class="activity-icon success">
                                                <i class="fas fa-check"></i>
                                            </div>
                                            <div class="activity-content">
                                                <div class="activity-text">
                                                    <strong>
                                                        <%= actividad.docente_nombre %>
                                                            <%= actividad.docente_apellido %>
                                                    </strong>
                                                    evaluó a <strong>
                                                        <%= actividad.estudiante_nombre %>
                                                            <%= actividad.estudiante_apellido %>
                                                    </strong>
                                                    <% if (actividad.rubrica_nombre) { %>
                                                        en <em>
                                                            <%= actividad.rubrica_nombre %>
                                                        </em>
                                                        <% } %>
                                                            <% if (actividad.materia_nombre) { %>
                                                                (<%= actividad.materia_nombre %>)
                                                                    <% } %>
                                                </div>
                                                <div class="activity-time">
                                                    <%= actividad.tiempo_transcurrido %>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                            <% } else { %>
                                                <div class="activity-item">
                                                    <div class="activity-icon primary">
                                                        <i class="fas fa-info-circle"></i>
                                                    </div>
                                                    <div class="activity-content">
                                                        <div class="activity-text">No hay actividad reciente</div>
                                                        <div class="activity-time">Las evaluaciones completadas
                                                            aparecerán aquí</div>
                                                    </div>
                                                </div>
                                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
        </main>

        <script src="./js/home.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="../js/rubricas.js"></script>
</body>

</html>
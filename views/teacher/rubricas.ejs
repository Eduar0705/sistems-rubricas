    <script>
        //Funcion para confirmar la salida del programa
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validacion',
                text: 'Estas seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',

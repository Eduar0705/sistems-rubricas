<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>Sistema de Rúbricas</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/teacher" class="nav-item active" data-external="true">
                <i class="fas fa-chart-line"></i>
                <span>Panel Principal</span>
            </a>
            <a href="/teacher/rubricas" class="nav-item" data-external="true">
                <i class="fas fa-table"></i>
                <span>Mis Rúbricas</span>
            </a>
            <a href="/teacher/createrubricas" class="nav-item" data-external="true">
                <i class="fas fa-plus-circle"></i>
                <span>Crear Rúbrica</span>
            </a>
            <a href="/teacher/evaluacion" class="nav-item" data-external="true">
                <i class="fas fa-clipboard-check"></i>
                <span>Evaluaciones</span>
            </a>
            <a href="/teacher/students" class="nav-item" data-external="true">
                <i class="fas fa-users"></i>
                <span>Estudiantes</span>
            </a>
            <a href="/teacher/report" class="nav-item" data-external="true">
                <i class="fas fa-file-alt"></i>
                <span>Reportes</span>
            </a>
        </nav>
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <div class="user-name"><%= datos.username %></div>
                    <div class="user-role"><%= datos.id_rol === 1 ? 'Administrador' : 'Docente' %></div>
                </div>
            </div>
            <button class="header-btn" onclick="Exit()">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle">Panel Principal</h1>
            </div>
            <div class="header-right">
                <button class="header-btn">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>

        <!-- Rubricas View -->
        <div class="view" id="rubricas">
            <div class="view-header">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Buscar rúbricas...">
                </div>
                <button class="btn-primary">
                    <i class="fas fa-plus"></i>
                    Nueva Rúbrica
                </button>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Asignatura</th>
                            <th>Criterios</th>
                            <th>Última Modificación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (rubricas && rubricas.length > 0) { %>
                            <% rubricas.forEach(function(rubrica) { %>
                                <tr>
                                    <td>
                                        <div class="table-cell-main">
                                            <i class="fas fa-file-alt"></i>
                                            <%= rubrica.nombre_rubrica %>
                                        </div>
                                    </td>
                                    <td><%= rubrica.materia_nombre %></td>
                                    <td>
                                        <% 
                                        // Count criteria for this rubrica (simplified - you might want to add this to the query)
                                        %>Criterios pendientes
                                    </td>
                                    <td><%= new Date(rubrica.fecha_creacion).toLocaleDateString('es-ES') %></td>
                                    <td>
                                        <span class="badge-status <%= rubrica.activo ? 'active' : 'draft' %>">
                                            <%= rubrica.activo ? 'Activa' : 'Inactiva' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="btn-icon" title="Ver" onclick="verRubrica('<%= rubrica.id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn-icon" title="Editar" onclick="editarRubrica('<%= rubrica.id %>')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-icon" title="Duplicar" onclick="duplicarRubrica('<%= rubrica.id %>')">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                            <button class="btn-icon" title="Eliminar" onclick="eliminarRubrica('<%= rubrica.id %>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" style="text-align: center; padding: 2rem;">
                                    <i class="fas fa-inbox" style="font-size: 3rem; color: #ccc; margin-bottom: 1rem;"></i>
                                    <br>
                                    No hay rúbricas disponibles
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="./js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        //Funcion para confirmar la salida del programa
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validacion',
                text: 'Estas seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if(result.isConfirmed){
                    window.location.href = '/login'
                }
            });
        }
    </script>
</body>
</html>
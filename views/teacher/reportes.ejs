<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <%- include("../inc/menuTeacher.ejs") %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <%- include('../inc/headerTeacher.ejs') %>

        <!-- Reportes View -->
        <div class="view" id="reportes">
            <div class="view-header">
                <h2>Reportes y Estadísticas</h2>
                <button class="btn-primary" onclick="window.print()">
                    <i class="fas fa-download"></i>
                    Exportar Reporte
                </button>
            </div>

            <div class="content-grid">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Rendimiento por Asignatura</h2>
                    </div>
                    <div class="card-content">
                        <canvas id="rendimientoChart"></canvas>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Estado de Evaluaciones</h2>
                    </div>
                    <div class="card-content">
                        <canvas id="estadoChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Resumen de Evaluaciones</h2>
                </div>
                <div class="card-content">
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-label">Total Evaluaciones</div>
                            <div class="summary-value"><%= stats ? stats.totalEvaluaciones : 0 %></div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Promedio General</div>
                            <div class="summary-value"><%= stats ? stats.promedioGeneral : 0 %></div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Tasa de Aprobación</div>
                            <div class="summary-value"><%= stats ? stats.tasaAprobacion : 0 %>%</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Pendientes</div>
                            <div class="summary-value"><%= stats ? stats.pendientes : 0 %></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (stats) {
                // Rendimiento por Materia Chart
                const rendimientoCtx = document.getElementById('rendimientoChart').getContext('2d');
                const materias =  JSON.stringify(stats.rendimientoMateria.map(m => m.nombre));
                const promedios =  JSON.stringify(stats.rendimientoMateria.map(m => m.promedio));

                new Chart(rendimientoCtx, {
                    type: 'bar',
                    data: {
                        labels: materias,
                        datasets: [{
                            label: 'Promedio de Calificaciones',
                            data: promedios,
                            backgroundColor: 'rgba(75, 192, 192, 0.6)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 20
                            }
                        }
                    }
                });

                // Estado de Evaluaciones Chart (Completadas vs Pendientes)
                const estadoCtx = document.getElementById('estadoChart').getContext('2d');
                const completadas =  stats.totalEvaluaciones - stats.pendientes ;
                const pendientes =  stats.pendientes ;

                new Chart(estadoCtx, {
                    type: 'pie',
                    data: {
                        labels: ['Completadas', 'Pendientes'],
                        datasets: [{
                            data: [completadas, pendientes],
                            backgroundColor: [
                                'rgba(54, 162, 235, 0.6)',
                                'rgba(255, 99, 132, 0.6)'
                            ]
                        }]
                    }
                });
            }
        });
    </script>
    
    <script src="../js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
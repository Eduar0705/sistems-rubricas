document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM cargado - Inicializando modales');

    // Cerrar modales con ESC
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            const modalEval = document.getElementById('modalEvaluar');
            const modalDetalles = document.getElementById('modalVerDetalles');

            if (modalEval && modalEval.classList.contains('active')) {
                closeModalEvaluar();
            } else if (modalDetalles && modalDetalles.classList.contains('active')) {
                closeModalDetalles();
            }
        }
    });

    // Cerrar modal de evaluación al hacer clic fuera
    const modalEvaluar = document.getElementById('modalEvaluar');
    if (modalEvaluar) {
        modalEvaluar.addEventListener('click', function(event) {
            if (event.target === this) {
                closeModalEvaluar();
            }
        });
    } else {
        console.warn('Modal #modalEvaluar no encontrado en el DOM');
    }

    // Cerrar modal de detalles al hacer clic fuera
    const modalDetalles = document.getElementById('modalVerDetalles');
    if (modalDetalles) {
        modalDetalles.addEventListener('click', function(event) {
            if (event.target === this) {
                closeModalDetalles();
            }
        });
    } else {
        console.warn('Modal #modalVerDetalles no encontrado en el DOM');
    }

    console.log('Modales inicializados correctamente');

    // Inicializar módulos de filtrado y paginación
    FiltradoModule.init();
    PaginationModule.initialize();
});

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>Sistema de Rúbricas</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/home" class="nav-item " data-external="true">
                <i class="fas fa-chart-line"></i>
                <span>Panel Principal</span>
            </a>
            <a href="/admin/rubricas" class="nav-item" data-external="true">
                <i class="fas fa-table"></i>
                <span>Mis Rúbricas</span>
            </a>
            <a href="/admin/createrubricas" class="nav-item" data-external="true">
                <i class="fas fa-plus-circle"></i>
                <span>Crear Rúbrica</span>
            </a>
            <a href="/admin/evaluaciones" class="nav-item" data-external="true">
                <i class="fas fa-clipboard-check"></i>
                <span>Evaluaciones</span>
            </a>
            <a href="/admin/permisos" class="nav-item" data-external="true">
                <i class="fas fa-user-plus"></i>
                <span>Permisos</span>
            </a>
            <a href="/admin/profesores" class="nav-item" data-external="true">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Profesores</span>
            </a>
            <a href="/admin/reportes" class="nav-item" data-external="true">
                <i class="fas fa-file-alt"></i>
                <span>Reportes</span>
            </a>
        </nav>
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <div class="user-name"><%= datos.username %></div>
                    <div class="user-role"><%= datos.id_rol === 1 ? 'Administrador' : 'Docente' %></div>
                </div>
            </div>
            <button class="header-btn" onclick="Exit()">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </aside>
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle"> <%= title || 'Rubricas' %> </h1>
            </div>
            <div class="header-right">
                <button class="header-btn" onclick="window.location.href = '/admin/config'">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>
        
        <div class="view active" id="config">
            <h2>Configuración</h2>
            
            <div class="view-header">
                <div class="search-box">
                    <i class="fa fa-search"></i>
                    <input type="text" placeholder="Buscar usuario..." id="searchInput">
                </div>
                <button class="btns btn-abrir-modal" id="btnAbrirModal">
                    <i class="fa fa-user-plus"></i>
                    Agregar Usuario
                </button>
            </div>
            <div class="view-content">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Cedula</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (usuarios.length === 0) { %>
                            <tr>
                                <td colspan="5" style="text-align: center;">No se encontraron usuarios.</td>
                            </tr>
                        <% } else { %>
                            <% usuarios.forEach(function(usuario) { %>
                                <tr>
                                    <td><%= usuario.cedula %></td>
                                    <td><%= usuario.username %></td>
                                    <td><%= usuario.email %></td>
                                    <td><%= (usuario.id_rol === 1) ? 'Administrador' : (usuario.id_rol === 2) ? 'Docente' : 'Estudiante' %></td>
                                    <td>
                                        <button class="btns btn-edit">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <button class="btns btn-delete">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script src="../js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        //Funcion para confirmar la salida del programa
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validacion',
                text: 'Estas seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if(result.isConfirmed){
                    window.location.href = '/login'
                }
            });
        }
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>Sistema de Rúbricas</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/home" class="nav-item" data-external="true">
                <i class="fas fa-chart-line"></i>
                <span>Panel Principal</span>
            </a>
            <a href="/admin/rubricas" class="nav-item" data-external="true">
                <i class="fas fa-table"></i>
                <span>Mis Rúbricas</span>
            </a>
            <a href="/admin/createrubricas" class="nav-item" data-external="true">
                <i class="fas fa-plus-circle"></i>
                <span>Crear Rúbrica</span>
            </a>
            <a href="/admin/evaluaciones" class="nav-item active" data-external="true">
                <i class="fas fa-clipboard-check"></i>
                <span>Evaluaciones</span>
            </a>
            <a href="/admin/permisos" class="nav-item" data-external="true">
                <i class="fas fa-user-plus"></i>
                <span>Permisos</span>
            </a>
            <a href="/admin/profesores" class="nav-item" data-external="true">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Profesores</span>
            </a>
            <a href="/admin/reportes" class="nav-item" data-external="true">
                <i class="fas fa-file-alt"></i>
                <span>Reportes</span>
            </a>
        </nav>
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <div class="user-name"><%= datos.username %></div>
                    <div class="user-role"><%= datos.id_rol === 1 ? 'Administrador' : 'Docente' %></div>
                </div>
            </div>
            <button class="header-btn" onclick="Exit()">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle"> <%= title || 'Rubricas' %> </h1>
            </div>
            <div class="header-right">
                <button class="header-btn" onclick="window.location.href = '/admin/config'">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>

        <!-- Evaluaciones View -->
        <div class="view" id="evaluaciones">
            <div class="view-header">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Buscar evaluaciones...">
                </div>
                <div class="filter-group">
                    <select class="form-select">
                        <option>Todas las rúbricas</option>
                        <option>Proyecto Final</option>
                        <option>Presentación Oral</option>
                    </select>
                    <select class="form-select">
                        <option>Todos los estados</option>
                        <option>Completadas</option>
                        <option>Pendientes</option>
                    </select>
                </div>
            </div>

            <div class="evaluaciones-grid">
                <div class="evaluacion-card">
                    <div class="evaluacion-header">
                        <div class="evaluacion-student">
                            <div class="student-avatar">JP</div>
                            <div>
                                <div class="student-name">Juan Pérez</div>
                                <div class="student-id">ID: 2021-0123</div>
                            </div>
                        </div>
                        <span class="badge-status completed">Completada</span>
                    </div>
                    <div class="evaluacion-body">
                        <div class="evaluacion-rubrica">
                            <i class="fas fa-file-alt"></i>
                            Proyecto Final - Ingeniería de Software
                        </div>
                        <div class="evaluacion-score">
                            <div class="score-label">Calificación</div>
                            <div class="score-value">8.5/10</div>
                        </div>
                    </div>
                    <div class="evaluacion-footer">
                        <span class="evaluacion-date">
                            <i class="fas fa-calendar"></i>
                            15/10/2025
                        </span>
                        <button class="btn-text">Ver Detalles</button>
                    </div>
                </div>

                <div class="evaluacion-card">
                    <div class="evaluacion-header">
                        <div class="evaluacion-student">
                            <div class="student-avatar">MG</div>
                            <div>
                                <div class="student-name">María González</div>
                                <div class="student-id">ID: 2021-0124</div>
                            </div>
                        </div>
                        <span class="badge-status pending">Pendiente</span>
                    </div>
                    <div class="evaluacion-body">
                        <div class="evaluacion-rubrica">
                            <i class="fas fa-file-alt"></i>
                            Presentación Oral - Metodología
                        </div>
                        <div class="evaluacion-score">
                            <div class="score-label">Calificación</div>
                            <div class="score-value">-/-</div>
                        </div>
                    </div>
                    <div class="evaluacion-footer">
                        <span class="evaluacion-date">
                            <i class="fas fa-calendar"></i>
                            Pendiente
                        </span>
                        <button class="btn-text">Evaluar</button>
                    </div>
                </div>

                <div class="evaluacion-card">
                    <div class="evaluacion-header">
                        <div class="evaluacion-student">
                            <div class="student-avatar">CR</div>
                            <div>
                                <div class="student-name">Carlos Rodríguez</div>
                                <div class="student-id">ID: 2021-0125</div>
                            </div>
                        </div>
                        <span class="badge-status completed">Completada</span>
                    </div>
                    <div class="evaluacion-body">
                        <div class="evaluacion-rubrica">
                            <i class="fas fa-file-alt"></i>
                            Proyecto Final - Ingeniería de Software
                        </div>
                        <div class="evaluacion-score">
                            <div class="score-label">Calificación</div>
                            <div class="score-value">9.2/10</div>
                        </div>
                    </div>
                    <div class="evaluacion-footer">
                        <span class="evaluacion-date">
                            <i class="fas fa-calendar"></i>
                            14/10/2025
                        </span>
                        <button class="btn-text">Ver Detalles</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="../js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        //Funcion para confirmar la salida del programa
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validacion',
                text: 'Estas seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if(result.isConfirmed){
                    window.location.href = '/login'
                }
            });
        }
    </script>
</body>
</html>

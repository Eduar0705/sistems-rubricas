<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>Sistema de Rúbricas</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/home" class="nav-item" data-view="dashboard">
                <i class="fas fa-chart-line"></i>
                <span>Panel Principal</span>
            </a>
            <a href="/admin/rubricas" class="nav-item" data-external="true">
                <i class="fas fa-table"></i>
                <span>Mis Rúbricas</span>
            </a>
            <a href="/admin/createrubricas" class="nav-item" data-external="true">
                <i class="fas fa-plus-circle"></i>
                <span>Crear Rúbrica</span>
            </a>
            <a href="/admin/evaluaciones" class="nav-item" data-external="true">
                <i class="fas fa-clipboard-check"></i>
                <span>Evaluaciones</span>
            </a>
            <a href="/admin/estudiantes" class="nav-item active" data-external="true">
                <i class="fas fa-users"></i>
                <span>Estudiantes</span>
            </a>
            <a href="/admin/profesores" class="nav-item" data-external="true">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Profesores</span>
            </a>
            <a href="/admin/reportes" class="nav-item" data-external="true">
                <i class="fas fa-file-alt"></i>
                <span>Reportes</span>
            </a>
        </nav>
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <div class="user-name"><%= datos.username %></div>
                    <div class="user-role"><%= datos.id_rol === 1 ? 'Administrador' : 'Docente' %></div>
                </div>
            </div>
            <button class="header-btn" onclick="Exit()">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle">Panel Principal</h1>
            </div>
            <div class="header-right">
                <button class="header-btn">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>

        <!-- Estudiantes View -->
        <div class="view" id="estudiantes">
            <div class="view-header">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Buscar estudiantes...">
                </div>
                <button class="btn-primary">
                    <i class="fas fa-user-plus"></i>
                    Agregar Estudiante
                </button>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Estudiante</th>
                            <th>ID</th>
                            <th>Asignatura</th>
                            <th>Evaluaciones</th>
                            <th>Promedio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="table-cell-main">
                                    <div class="student-avatar small">JP</div>
                                    Juan Pérez
                                </div>
                            </td>
                            <td>2021-0123</td>
                            <td>Ingeniería de Software II</td>
                            <td>12 completadas</td>
                            <td><span class="score-badge high">8.5</span></td>
                            <td>
                                <div class="table-actions">
                                    <button class="btn-icon" title="Ver perfil">
                                        <i class="fas fa-user"></i>
                                    </button>
                                    <button class="btn-icon" title="Historial">
                                        <i class="fas fa-history"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="table-cell-main">
                                    <div class="student-avatar small">MG</div>
                                    María González
                                </div>
                            </td>
                            <td>2021-0124</td>
                            <td>Metodología de la Investigación</td>
                            <td>10 completadas</td>
                            <td><span class="score-badge high">9.1</span></td>
                            <td>
                                <div class="table-actions">
                                    <button class="btn-icon" title="Ver perfil">
                                        <i class="fas fa-user"></i>
                                    </button>
                                    <button class="btn-icon" title="Historial">
                                        <i class="fas fa-history"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="table-cell-main">
                                    <div class="student-avatar small">CR</div>
                                    Carlos Rodríguez
                                </div>
                            </td>
                            <td>2021-0125</td>
                            <td>Ingeniería de Software II</td>
                            <td>11 completadas</td>
                            <td><span class="score-badge medium">7.8</span></td>
                            <td>
                                <div class="table-actions">
                                    <button class="btn-icon" title="Ver perfil">
                                        <i class="fas fa-user"></i>
                                    </button>
                                    <button class="btn-icon" title="Historial">
                                        <i class="fas fa-history"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script src="./js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        //Funcion para confirmar la salida del programa
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validacion',
                text: 'Estas seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if(result.isConfirmed){
                    window.location.href = '/login'
                }
            });
        }
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="stylesheet" href="../css/modalProfe.css">
    <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <%- include('../inc/menu.ejs') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <%- include('../inc/headerAdmin.ejs') %>

        <!-- Estudiantes View -->
        <div class="view" id="Profesor">
            <div class="view-header">
                <div class="search-box">
                    <i class="fa fa-search"></i>
                    <input type="text" placeholder="Buscar Profesor...">
                </div>
                <button class="btn-primary" id="btnAbrirModal">
                    <i class="fa fa-user-plus"></i>
                    Agregar Nuevo Profesor
                </button>
            </div>

            <!-- Controles de paginación -->
            <div class="pagination-controls">
                <div class="entries-control">
                    <label for="entriesPerPage">Mostrar:</label>
                    <select id="entriesPerPage" class="entries-select">
                        <option value="5" selected>5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="all">Todos</option>
                    </select>
                    <span>profesores</span>
                </div>
                <div class="pagination-info">
                    Mostrando <span id="showingStart">1</span> a <span id="showingEnd">5</span> de <span id="totalEntries"><%= profesores.length %></span> profesores
                </div>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Profesor</th>
                            <th>Cédula</th>
                            <th>Especialidad</th>
                            <th>Correo</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="profesoresTableBody">
                        <% if(profesores.length > 0) { %>
                            <% profesores.forEach((profe)=>{ %>
                                <tr class="profesor-row">
                                    <td data-label="Profesor"><%= profe.nombre + ' ' + profe.apellido %></td>
                                    <td data-label="Cédula"><%= profe.cedula %></td>
                                    <td data-label="Especialidad"><%= profe.especializacion %></td>
                                    <td data-label="Correo"><%= profe.email %></td>
                                    <td data-label="Activo">
                                        <span class="status-badge <%= profe.activo === 1 ? 'status-active' : 'status-inactive' %>">
                                            <%= profe.activo === 1 ? 'Activo' : 'Inactivo' %>
                                        </span>
                                    </td>
                                    <td data-label="Acciones">
                                        <div class="table-actions">
                                            <button class="btns btn-edit" 
                                                    data-cedula="<%= profe.cedula %>"
                                                    data-nombre="<%= profe.nombre %>"
                                                    data-apellido="<%= profe.apellido %>"
                                                    data-especializacion="<%= profe.especializacion %>"
                                                    data-email="<%= profe.email %>"
                                                    data-telf="<%= profe.telf || '' %>"
                                                    data-descripcion="<%= profe.descripcion || '' %>"
                                                    data-activo="<%= profe.activo %>"
                                                    title="Editar">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <button class="btns btn-delete" 
                                                    onclick="eliminarProfesor('<%= profe.cedula %>')"
                                                    title="Eliminar">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                            <button class="btns btn-view" 
                                                    data-cedula="<%= profe.cedula %>"
                                                    data-nombre="<%= profe.nombre %>"
                                                    data-apellido="<%= profe.apellido %>"
                                                    data-especializacion="<%= profe.especializacion %>"
                                                    data-email="<%= profe.email %>"
                                                    data-telf="<%= profe.telf || '' %>"
                                                    data-descripcion="<%= profe.descripcion || '' %>"
                                                    data-activo="<%= profe.activo %>"
                                                    title="Ver detalles">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                            <button class="btns btn-permi" title="Permisos" 
                                                    data-cedula="<%= profe.cedula %>"
                                                    data-nombre="<%= profe.nombre %>"
                                                    data-apellido="<%= profe.apellido %>"
                                                    data-especializacion="<%= profe.especializacion %>"
                                                    data-email="<%= profe.email %>"
                                                    data-telf="<%= profe.telf || '' %>"
                                                    data-descripcion="<%= profe.descripcion || '' %>"
                                                    data-activo="<%= profe.activo %>">
                                                <i class="fa fa-book"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <%})%>
                        <% }else{ %>
                            <tr>
                                <td colspan="6" style="text-align: center;">No hay profesores registrados.</td>
                            </tr>
                        <% }%>
                    </tbody>
                </table>
            </div>

            <!-- Botones de paginación -->
            <div class="pagination-buttons" id="paginationButtons">
                <!-- Se generarán dinámicamente con JavaScript -->
            </div>
        </div>

        <% if (typeof locals.mensaje != 'undefined' || typeof mensaje != 'undefined') { %>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                Swal.fire({
                    icon: '<%= (locals.mensaje || mensaje).includes("Error") ? "error" : "success" %>',
                    title: 'Información',
                    text: '<%= locals.mensaje || mensaje %>',
                    confirmButtonText: 'Aceptar'
                });
            </script>
        <% } %>

        <!-- Modal para agregar proferores -->
        <div class="modal-overlay" id="modalOverlay" >
            <div class="modal-add" id="modalAdd">
                <button class="btn-cerrar" id="btnCerrar">&times;</button>
                <h2>Agregar Nuevo Profesor</h2>
                
                <form id="formProfesor" method="post" action="/envioProfe">
                    
                    <div class="form-group">
                        <label for="nombre">Cedula:</label>
                        <input type="text" id="cedula" name="cedula" required placeholder="Ej: 12345678 ">
                    </div>
                    
                    <div class="form-group">
                        <label for="nombre">Nombres:</label>
                        <input type="text" id="nombre" name="nombre" required placeholder="Ej: Juan ">
                    </div>
                    
                    <div class="form-group">
                        <label for="apellido">Apellidos:</label>
                        <input type="text" id="apellido" name="apellido" required placeholder="Ej: Gómez">
                    </div>

                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" id="email" name="email" required placeholder="profesor@ejemplo.com">
                    </div>

                    <div class="form-group">
                        <label for="telefono">Teléfono</label>
                        <input type="tel" id="telefono" name="telefono" placeholder="0414 500 00 00">
                    </div>

                    <div class="form-group">
                        <label for="especialidad">Especialidad</label>
                        <select id="especialidad" name="especialidad" required>
                            <option value="">Seleccionar especialidad</option>
                            <option value="ingeniero">Ingeniero</option>
                            <option value="lic_educacion">Licenciado en Educación</option>
                            <option value="lic_administracion">Licenciado en Administración</option>
                            <option value="contador">Contador Público</option>
                            <option value="administrador">Administrador de Empresas</option>
                            <option value="doctor">Doctorado</option>
                            <option value="magister">Magíster/Maestría</option>
                            <option value="profesor">Profesor</option>
                            <option value="tecnico">Técnico Superior</option>
                            <option value="especialista">Especialista</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="notas">Notas adicionales</label>
                        <textarea id="notas" name="notas" placeholder="Información adicional sobre el profesor..."></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" id="btnCancelar">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Profesor</button>
                    </div>
                </form>
            </div>
        </div>


        <!-- Modal para Editar Profesor -->
        <div class="modal-overlay" id="modalEditOverlay">
            <div class="modal-edit" id="modalEdit">
                <button class="btn-cerrar" id="btnCerrarEdit">&times;</button>
                <h2>Editar Profesor</h2>
                
                <form id="formProfesorEdit" method="post" action="/updateProfe">
                    <input type="hidden" id="idProfesor" name="id">
                    
                    <div class="form-group">
                        <label for="cedulaEdit">Cédula:</label>
                        <input type="text" id="cedulaEdit" name="cedula" required placeholder="Ej: 12345678">
                    </div>
                    
                    <div class="form-group">
                        <label for="nombreEdit">Nombres:</label>
                        <input type="text" id="nombreEdit" name="nombre" required placeholder="Ej: Juan">
                    </div>
                    
                    <div class="form-group">
                        <label for="apellidoEdit">Apellidos:</label>
                        <input type="text" id="apellidoEdit" name="apellido" required placeholder="Ej: Gómez">
                    </div>

                    <div class="form-group">
                        <label for="emailEdit">Correo electrónico</label>
                        <input type="email" id="emailEdit" name="email" required placeholder="profesor@ejemplo.com">
                    </div>

                    <div class="form-group">
                        <label for="telefonoEdit">Teléfono</label>
                        <input type="tel" id="telefonoEdit" name="telefono" placeholder="0414 500 00 00">
                    </div>

                    <div class="form-group">
                        <label for="especialidadEdit">Especialidad</label>
                        <select id="especialidadEdit" name="especialidad" required>
                            <option value="">Seleccionar especialidad</option>
                            <option value="ingeniero">Ingeniero</option>
                            <option value="lic_educacion">Licenciado en Educación</option>
                            <option value="lic_administracion">Licenciado en Administración</option>
                            <option value="contador">Contador Público</option>
                            <option value="administrador">Administrador de Empresas</option>
                            <option value="doctor">Doctorado</option>
                            <option value="magister">Magíster/Maestría</option>
                            <option value="profesor">Profesor</option>
                            <option value="tecnico">Técnico Superior</option>
                            <option value="especialista">Especialista</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="notasEdit">Notas adicionales</label>
                        <select name="activo" id="activo">
                            <option value="">Selccione una opcion</option>
                            <option value="1">Activo</option>
                            <option value="2">Inactivo</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="notasEdit">Notas adicionales</label>
                        <textarea id="notasEdit" name="notas" placeholder="Información adicional sobre el profesor..."></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" id="btnCancelarEdit">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Actualizar Profesor</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Modal de Permisos -->
        <div class="modal-overlay" id="modalPermisos">
            <div class="modal-permisos">
                <div class="modal-header">
                    <h2><i class="fa fa-book"></i> Gestionar Permisos</h2>
                    <button class="modal-close" onclick="cerrarModalPermisos()">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
                
                <div class="modal-body">
                    <!-- Información del docente -->
                    <div class="docente-info">
                        <div class="info-item">
                            <strong>Docente:</strong>
                            <span id="docenteNombre"></span>
                        </div>
                        <div class="info-item">
                            <strong>Especialización:</strong>
                            <span id="docenteEspecializacion"></span>
                        </div>
                    </div>

                    <!-- Permisos actuales -->
                    <div class="permisos-actuales">
                        <h3><i class="fa fa-list"></i> Permisos Actuales</h3>
                        <div id="listaPermisosActuales" class="permisos-lista">
                            <!-- Se cargarán dinámicamente -->
                        </div>
                    </div>

                    <!-- Agregar nuevo permiso -->
                    <div class="agregar-permiso">
                        <h3><i class="fa fa-plus-circle"></i> Agregar Nuevo Permiso</h3>
                        
                        <!-- Paso 1: Seleccionar Carrera -->
                        <div class="paso-permiso">
                            <h4>1. Seleccionar Carrera</h4>
                            <div id="carrerasContainer" class="cards-container">
                                <!-- Se cargarán dinámicamente -->
                            </div>
                        </div>

                        <!-- Paso 2: Seleccionar Semestre -->
                        <div class="paso-permiso" id="pasoSemestre" style="display: none;">
                            <h4>2. Seleccionar Semestre</h4>
                            <div id="semestresContainer" class="cards-container">
                                <!-- Se cargarán dinámicamente -->
                            </div>
                        </div>

                        <!-- Paso 3: Seleccionar Materia -->
                        <div class="paso-permiso" id="pasoMateria" style="display: none;">
                            <h4>3. Seleccionar Materia</h4>
                            <div id="materiasContainer" class="cards-container">
                                <!-- Se cargarán dinámicamente -->
                            </div>
                        </div>

                        <!-- Paso 4: Seleccionar Sección -->
                        <div class="paso-permiso" id="pasoSeccion" style="display: none;">
                            <h4>4. Seleccionar Sección</h4>
                            <div id="seccionesContainer" class="cards-container">
                                <!-- Se cargarán dinámicamente -->
                            </div>
                        </div>

                        <!-- Botón de guardar -->
                        <div class="modal-actions" id="accionesGuardar" style="display: none;">
                            <button class="btn btn-primary" onclick="guardarPermiso()">
                                <i class="fa fa-save"></i> Guardar Permiso
                            </button>
                            <button class="btn btn-secondary" onclick="resetearSeleccion()">
                                <i class="fa fa-refresh"></i> Reiniciar Selección
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../js/home.js"></script>
    <script src="../js/profe.js"></script>
</body>
</html>

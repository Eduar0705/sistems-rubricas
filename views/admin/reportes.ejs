<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <%- include('../inc/menu.ejs') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle"> <%= title || 'Rubricas' %> </h1>
            </div>
            <div class="header-right">
                <button class="header-btn" onclick="window.location.href = '/admin/config'">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>

        <!-- Reportes View -->
        <div class="view" id="reportes">
            <div class="view-header">
                <h2>Reportes y Estadísticas</h2>
                <button class="btn-primary">
                    <i class="fas fa-download"></i>
                    Exportar Reporte
                </button>
            </div>

            <div class="content-grid">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Rendimiento por Asignatura</h2>
                    </div>
                    <div class="card-content">
                        <div class="chart-placeholder">
                            <i class="fas fa-chart-bar"></i>
                            <p>Gráfico de rendimiento por asignatura</p>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Distribución de Calificaciones</h2>
                    </div>
                    <div class="card-content">
                        <div class="chart-placeholder">
                            <i class="fas fa-chart-pie"></i>
                            <p>Gráfico de distribución de calificaciones</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Resumen de Evaluaciones</h2>
                </div>
                <div class="card-content">
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-label">Total Evaluaciones</div>
                            <div class="summary-value">156</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Promedio General</div>
                            <div class="summary-value">8.4</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Tasa de Aprobación</div>
                            <div class="summary-value">94%</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Pendientes</div>
                            <div class="summary-value">12</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="../js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>

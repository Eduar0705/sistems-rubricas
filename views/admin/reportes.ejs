<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <%- include('../inc/menu.ejs') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <%- include('../inc/headerAdmin.ejs') %>

        <!-- Reportes View -->
        <div class="view" id="reportes">
            <div class="view-header">
                <h2>Reportes y Estadísticas</h2>
                <button class="btn-primary" onclick="window.print()">
                    <i class="fas fa-download"></i>
                    Exportar Reporte
                </button>
            </div>

            <div class="content-grid">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Rendimiento por Carrera</h2>
                    </div>
                    <div class="card-content">
                        <canvas id="rendimientoChart"></canvas>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Distribución de Calificaciones</h2>
                    </div>
                    <div class="card-content">
                        <canvas id="distribucionChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Resumen General</h2>
                </div>
                <div class="card-content">
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-label">Total Estudiantes</div>
                            <div class="summary-value"><%= stats ? stats.totalEstudiantes : 0 %></div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Total Docentes</div>
                            <div class="summary-value"><%= stats ? stats.totalDocentes : 0 %></div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Total Rúbricas</div>
                            <div class="summary-value"><%= stats ? stats.totalRubricas : 0 %></div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Promedio General</div>
                            <div class="summary-value"><%= stats ? stats.promedioGeneral : 0 %></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Pass stats data from EJS to JavaScript
        const stats = "<%- stats ? JSON.stringify(stats) : 'null' %>";
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (stats) { 
                // Rendimiento por Carrera Chart
                const rendimientoCtx = document.getElementById('rendimientoChart').getContext('2d');
                const carreras = stats.rendimientoCarrera.map(r => r.nombre);
                const promedios = stats.rendimientoCarrera.map(r => r.promedio);

                new Chart(rendimientoCtx, {
                    type: 'bar',
                    data: {
                        labels: carreras,
                        datasets: [{
                            label: 'Promedio de Calificaciones',
                            data: promedios,
                            backgroundColor: 'rgba(54, 162, 235, 0.6)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 20 // Assuming 20 is max grade
                            }
                        }
                    }
                });

                // Distribución de Notas Chart
                const distribucionCtx = document.getElementById('distribucionChart').getContext('2d');
                const rangos = stats.distribucionNotas.map(d => d.rango);
                const cantidades = stats.distribucionNotas.map(d => d.cantidad);

                new Chart(distribucionCtx, {
                    type: 'doughnut',
                    data: {
                        labels: rangos,
                        datasets: [{
                            data: cantidades,
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.6)', // Sobresaliente
                                'rgba(54, 162, 235, 0.6)', // Notable
                                'rgba(255, 206, 86, 0.6)', // Aprobado
                                'rgba(255, 99, 132, 0.6)'  // Reprobado
                            ]
                        }]
                    }
                });
            }
        });
    </script>

    <script src="../js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>

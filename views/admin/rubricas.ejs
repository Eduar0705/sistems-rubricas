<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Rubricas' %></title>
    <link rel="stylesheet" href="../css/home.css">
    <link rel="shortcut icon" href="../img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .swal2-html-container {
            max-height: 70vh;
            overflow-y: auto;
        }
        
        .rubrica-modal {
            text-align: left;
            font-size: 14px;
        }
        
        .rubrica-header-modal {
            background-color: #a0a1a133;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }
        
        .rubrica-title-modal {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .rubrica-info-modal {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            font-size: 13px;
        }
        
        .info-item {
            display: flex;
            gap: 8px;
        }
        
        .info-label-modal {
            font-weight: bold;
            opacity: 0.9;
        }
        
        .criterio-card {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
        }
        
        .criterio-title {
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 15px;
        }
        
        .criterio-puntaje {
            display: inline-block;
            background: #45dc57;
            color: white;
            padding: 3px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: 10px;
        }
        
        .niveles-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 10px;
            margin-top: 10px;
        }
        
        .nivel-card {
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px;
            transition: all 0.3s;
        }
        
        .nivel-card:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .nivel-nombre {
            font-weight: bold;
            margin-bottom: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .nivel-puntaje {
            background: #55da2d;
            color: white;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 11px;
        }
        
        .nivel-descripcion {
            font-size: 12px;
            color: #555;
            line-height: 1.4;
        }
        
        .print-btn {
            margin-top: 20px;
            text-align: center;
        }
        
        .btn-print-modal {
            background: #3498db;
            color: white;
            border: none;
            padding: 10px 30px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn-print-modal:hover {
            background: #2980b9;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>Sistema de Rúbricas</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/home" class="nav-item" data-external="true">
                <i class="fas fa-chart-line"></i>
                <span>Panel Principal</span>
            </a>
            <a href="/admin/rubricas" class="nav-item active" data-external="true">
                <i class="fas fa-table"></i>
                <span>Mis Rúbricas</span>
            </a>
            <a href="/admin/createrubricas" class="nav-item" data-external="true">
                <i class="fas fa-plus-circle"></i>
                <span>Crear Rúbrica</span>
            </a>
            <a href="/admin/evaluaciones" class="nav-item" data-external="true">
                <i class="fas fa-clipboard-check"></i>
                <span>Evaluaciones</span>
            </a>
            <a href="/admin/permisos" class="nav-item" data-external="true">
                <i class="fas fa-user-plus"></i>
                <span>Permisos</span>
            </a>
            <a href="/admin/profesores" class="nav-item" data-external="true">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Profesores</span>
            </a>
            <a href="/admin/reportes" class="nav-item" data-external="true">
                <i class="fas fa-file-alt"></i>
                <span>Reportes</span>
            </a>
        </nav>
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <div class="user-name"><%= datos.username %></div>
                    <div class="user-role"><%= datos.id_rol === 1 ? 'Administrador' : 'Docente' %></div>
                </div>
            </div>
            <button class="header-btn" onclick="Exit()">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </aside>

    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle"> <%= title || 'Rubricas' %> </h1>
            </div>
            <div class="header-right">
                <button class="header-btn" onclick="window.location.href = '/admin/config'">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>

        <!-- Rubricas View -->
        <div style="padding: 30px;" id="rubricas">
            <div class="view-header">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Buscar rúbricas...">
                </div>
                <button class="btn-primary" onclick="window.location.href='/admin/createrubricas'">
                    <i class="fas fa-plus"></i>
                    Nueva Rúbrica
                </button>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Asignatura</th>
                            <th>Sección</th>
                            <th>Tipo</th>
                            <th>Porcentaje</th>
                            <th>Fecha Evaluación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(rubricas && rubricas.length > 0) { %>
                            <% rubricas.forEach(function(rubrica) { %>
                                <tr>
                                    <td>
                                        <div class="table-cell-main">
                                            <i class="fas fa-file-alt"></i>
                                            <%= rubrica.nombre_rubrica %>
                                        </div>
                                    </td>
                                    <td><%= rubrica.materia_nombre %></td>
                                    <td><%= rubrica.seccion_codigo %></td>
                                    <td><%= rubrica.tipo_evaluacion %></td>
                                    <td><%= rubrica.porcentaje_evaluacion %>%</td>
                                    <td><%= new Date(rubrica.fecha_evaluacion).toLocaleDateString('es-ES') %></td>
                                    <td>
                                        <span class="badge-status active">Activa</span>
                                    </td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="btn-icon" title="Ver" onclick="verRubrica('<%= rubrica.id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn-icon" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-icon" title="Duplicar">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                            <button class="btn-icon" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" style="text-align: center; padding: 40px;">
                                    <i class="fas fa-inbox" style="font-size: 48px; color: #ccc; margin-bottom: 10px; display: block;"></i>
                                    <p style="color: #999;">No hay rúbricas disponibles. Crea tu primera rúbrica.</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    
    <script src="../js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validación',
                text: '¿Estás seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí',
                cancelButtonText: 'No'
            }).then((result) => {
                if(result.isConfirmed){
                    window.location.href = '/login'
                }
            });
        }

        // Búsqueda simple
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Función para ver rúbrica en modal moderno
        function verRubrica(id) {
            Swal.fire({
                title: 'Cargando...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch(`/admin/rubricas/detalle/${id}`)
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        mostrarRubricaModal(data.rubrica, data.criterios);
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error', 'No se pudo cargar la rúbrica', 'error');
                });
        }

        function mostrarRubricaModal(rubrica, criterios) {
            const html = `
                <div class="rubrica-modal">
                    <div class="rubrica-header-modal">
                        <div class="rubrica-title-modal">
                            ${rubrica.nombre_rubrica} - ${rubrica.porcentaje_evaluacion}%
                        </div>
                        <div class="rubrica-info-modal">
                            <div class="info-item">
                                <span class="info-label-modal">Docente:</span>
                                <span>${rubrica.docente_nombre}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label-modal">Materia:</span>
                                <span>${rubrica.materia_nombre}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label-modal">Carrera:</span>
                                <span>${rubrica.carrera_nombre}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label-modal">Sección:</span>
                                <span>${rubrica.seccion_codigo}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label-modal">Fecha:</span>
                                <span>${new Date(rubrica.fecha_evaluacion).toLocaleDateString('es-ES')}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label-modal">Lapso:</span>
                                <span>${rubrica.lapso_academico}</span>
                            </div>
                        </div>
                    </div>
                    
                    ${criterios.map(criterio => `
                        <div class="criterio-card">
                            <div class="criterio-title">
                                ${criterio.descripcion}
                                <span class="criterio-puntaje">${criterio.puntaje_maximo} pts</span>
                            </div>
                            <div class="niveles-container">
                                ${criterio.niveles.map(nivel => `
                                    <div class="nivel-card">
                                        <div class="nivel-nombre">
                                            <span>${nivel.nombre_nivel}</span>
                                            <span class="nivel-puntaje">${nivel.puntaje} pts</span>
                                        </div>
                                        <div class="nivel-descripcion">
                                            ${nivel.descripcion}
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    `).join('')}
                    
                    <div class="print-btn">
                        <button class="btn-print-modal" onclick="imprimirRubrica(${rubrica.id})">
                            <i class="fas fa-print"></i>
                            Imprimir Rúbrica
                        </button>
                    </div>
                </div>
            `;

            Swal.fire({
                html: html,
                width: '90%',
                showCloseButton: true,
                showConfirmButton: false,
                customClass: {
                    container: 'rubrica-swal-container'
                }
            });
        }

        function imprimirContenido() {
            const contenedor = document.querySelector('.swal2-html-container');
            if (!contenedor) return;
            
            const ventana = window.open('', '_blank');
            ventana.document.write(`
                <html>
                    <head>
                        <title>Impresión</title>
                        <style>
                            body { font-family: Arial; padding: 20px; }
                            ${document.querySelector('style')?.innerHTML || ''}
                        </style>
                    </head>
                    <body>
                        ${contenedor.innerHTML}
                        <script>setTimeout(() => window.print(), 500)<\/script>
                    </body>
                </html>
            `);
            ventana.document.close();
        }
    </script>
</body>
</html>
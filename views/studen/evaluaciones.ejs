<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal Estudiante - Sistema de Gestión de Rúbricas</title>
    <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="../css/students.css">
</head>
<body>
    <main class="main-content">
        <%- include('../inc/menuStudents.ejs') %>
        <!-- Evaluaciones Section -->
        <section id="evaluaciones" class="content-section">
            <div class="page-header">
                <h1>Mis Evaluaciones</h1>
                <p>Revisa el detalle de tus evaluaciones y retroalimentación</p>
            </div>

            <div class="filters-bar">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchEvaluaciones" placeholder="Buscar evaluaciones...">
                </div>
                <select class="filter-select" id="filterEstado">
                    <option value="">Todos los estados</option>
                    <option value="completada">Completadas</option>
                    <option value="pendiente">Pendientes</option>
                </select>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Evaluación</th>
                            <th>Materia</th>
                            <th>Fecha</th>
                            <th>Calificación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="evaluacionesTable">
                        <tr>
                            <td>
                                <div class="table-cell-content">
                                    <i class="fas fa-code"></i>
                                    <span>Proyecto Final</span>
                                </div>
                            </td>
                            <td>Programación Web</td>
                            <td>15 Ene 2025</td>
                            <td><span class="score-badge excellent">9.2</span></td>
                            <td><span class="status-badge completed">Completada</span></td>
                            <td>
                                <button class="btn-icon" onclick="verEvaluacion(1)" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn-icon" onclick="descargarEvaluacion(1)" title="Descargar">
                                    <i class="fas fa-download"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="table-cell-content">
                                    <i class="fas fa-book-open"></i>
                                    <span>Ensayo Literario</span>
                                </div>
                            </td>
                            <td>Literatura Contemporánea</td>
                            <td>12 Ene 2025</td>
                            <td><span class="score-badge good">8.5</span></td>
                            <td><span class="status-badge completed">Completada</span></td>
                            <td>
                                <button class="btn-icon" onclick="verEvaluacion(2)" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn-icon" onclick="descargarEvaluacion(2)" title="Descargar">
                                    <i class="fas fa-download"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="table-cell-content">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Presentación Campaña</span>
                                </div>
                            </td>
                            <td>Marketing Digital</td>
                            <td>10 Ene 2025</td>
                            <td><span class="score-badge excellent">9.0</span></td>
                            <td><span class="status-badge completed">Completada</span></td>
                            <td>
                                <button class="btn-icon" onclick="verEvaluacion(3)" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn-icon" onclick="descargarEvaluacion(3)" title="Descargar">
                                    <i class="fas fa-download"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="table-cell-content">
                                    <i class="fas fa-microscope"></i>
                                    <span>Trabajo de Investigación</span>
                                </div>
                            </td>
                            <td>Metodología</td>
                            <td>-</td>
                            <td><span class="score-badge pending">Pendiente</span></td>
                            <td><span class="status-badge pending">Pendiente</span></td>
                            <td>
                                <button class="btn-icon" disabled title="No disponible">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
    <script src="../js/students.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        //Funcion para confirmar la salida del programa
        function Exit(){
            Swal.fire({
                icon: 'warning',
                title: 'Validacion',
                text: 'Estas seguro que deseas salir?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if(result.isConfirmed){
                    window.location.href = '/logout'
                }
            });
        }
    </script>
</body>
</html>